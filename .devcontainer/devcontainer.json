{
    "name": "IdS-Codespace",
    "image": "mcr.microsoft.com/vscode/devcontainers/java:0-8",
    "features": {
        "ghcr.io/devcontainers/features/java:8": {
            "installMaven": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "vscjava.vscode-maven",
                "eamodio.gitlens"
            ]
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y doxygen"
}
